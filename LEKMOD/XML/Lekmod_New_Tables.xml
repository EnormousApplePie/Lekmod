<?xml version="1.0" encoding="utf-8"?>
<GameData>
    <!-- BuildImprovementBuildTimeOverride -->
    <!-- This table is used to override the build time of improvements for specific traits -->
    <!-- A single trait can have multiple entries, each with a different build type and time -->
    <!-- The ResourceClassRequired column is optional and can be used to specify a resource class required for the build time to adjust -->
    <Table name="Trait_BuildImprovementBuildTimeOverride">
        <Column name="TraitType" type="text" notnull="true"/>
        <Column name="BuildType" type="text" notnull="true"/>
        <Column name="Time" type="integer" notnull="true"/>
        <Column name="ResourceClassRequired" type="text"/>
    </Table>

    <!-- Building_SameLandMassYieldChanges -->
    <!-- This table is used to add additional yields to a city if the city is on the same land mass as a city where this building is built -->
    <!-- The other table has the same effect but for different land masses instead -->
    <Table name="Building_SameLandMassYieldChanges">
        <Column name="BuildingType" type="text" reference="Buildings(Type)"/>
        <Column name="YieldType" type="text" reference="Yields(Type)"/>
        <Column name="Yield" type="integer" default="0"/>
    </Table>

    <Table name="Building_DifferentLandMassYieldChanges">
        <Column name="BuildingType" type="text" reference="Buildings(Type)"/>
        <Column name="YieldType" type="text" reference="Yields(Type)"/>
        <Column name="Yield" type="integer" default="0"/>
    </Table>

    <!-- Building_UnitCombatProductionCostModifiers -->
    <!-- This table is used for buildings that change the base production cost of a unit class -->
    <Table name="Building_UnitCombatProductionCostModifiers">
		<Column name="BuildingType" type="text" reference="Buildings(Type)"/>
		<Column name="UnitCombatType" type="text" reference="UnitCombatInfos(Type)"/>
		<Column name="CostModifier" type="integer" default="0"/>
	</Table>

    <Language_en_US>
        <Row Tag="TXT_KEY_PRODMOD_UNIT_COMBAT_COST">
            <Text>{1_Num}% production cost from {2_BuildingName}</Text>
        </Row>
    </Language_en_US>

    <!-- Building_UnitCombatExtraProduction -->
    <!-- This table is used for buildings that generate extra units for every unit produced, applied to specific unit classes -->
	<Table name="Building_UnitCombatExtraProduction">
		<Column name="BuildingType" type="text" reference="Buildings(Type)"/>
		<Column name="UnitCombatType" type="text" reference="UnitCombatInfos(Type)"/>
		<Column name="ExtraProduction" type="integer" default="0"/>
	</Table>

</Gamedata>