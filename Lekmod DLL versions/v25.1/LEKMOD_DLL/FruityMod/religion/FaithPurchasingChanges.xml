<GameData>
	
	<!-- Cost to purchase with Faith no longer increases as eras progress. -->
	<Eras>
		<Update>
			<Set FaithCostMultiplier="100" />
		</Update>
	</Eras>
	
	<!-- Increased base cost of Universities, Public Schools, and Research Labs to compensate. -->
	<Buildings>
		<Update>
			<Set FaithCost="400" />
			<Where BuildingClass="BUILDINGCLASS_UNIVERSITY" />
		</Update>
		<Update>
			<Set FaithCost="533" />
			<Where BuildingClass="BUILDINGCLASS_PUBLIC_SCHOOL" />
		</Update>
		<Update>
			<Set FaithCost="667" />
			<Where BuildingClass="BUILDINGCLASS_LABORATORY" />
		</Update>
	</Buildings>
  
</GameData>