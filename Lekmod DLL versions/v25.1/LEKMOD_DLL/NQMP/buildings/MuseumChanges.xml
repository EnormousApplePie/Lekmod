<GameData>

	<!-- Museums now need Amphitheaters instead of Opera Houses. They also now provide +2 Culture and +15% Culture. -->
	<Buildings>
		<Update>
			<Set CultureRateModifier="15" Help="TXT_KEY_BUILDING_MUSEUM_HELP" />
			<Where Type="BUILDING_MUSEUM" />
		</Update>
	</Buildings>
	<Building_ClassesNeededInCity>
		<Update>
			<Set BuildingClassType="BUILDINGCLASS_AMPHITHEATER" />
			<Where BuildingType="BUILDING_MUSEUM" />
		</Update>
	</Building_ClassesNeededInCity>
	<Building_YieldChanges>
		<Update>
			<Set Yield="2" />
			<Where BuildingType="BUILDING_MUSEUM" YieldType="YIELD_CULTURE" />
		</Update>
	</Building_YieldChanges>

