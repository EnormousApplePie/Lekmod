<GameData>
	
	<Defines>
		
		<!-- We Love The King Day base duration is now 18 turns (down from 20). -->
		<Update>
			<Set Value="18" />
			<Where Name="CITY_RESOURCE_WLTKD_TURNS" />
		</Update>
		
		<!-- Capital will ask for a resource 24 turns after game starts (down from 25, so that it has even numbers for scaling). -->
		<Update>
			<Set Value="24" />
			<Where Name="RESOURCE_DEMAND_COUNTDOWN_BASE" />
		</Update>
		<Update>
			<Set Value="24" />
			<Where Name="RESOURCE_DEMAND_COUNTDOWN_CAPITAL_ADD" />
		</Update>
		
	</Defines>
	
</GameData>