			<Set Yield="80" />
			<Where CitySpecializationType="CITYSPECIALIZATION_GENERAL_ECONOMIC" YieldType="YIELD_GOLD" />
		</Update>
		<Update>
			<Set Yield="100" />
			<Where CitySpecializationType="CITYSPECIALIZATION_GENERAL_ECONOMIC" YieldType="YIELD_SCIENCE" />
		</Update>
		<Update>
			<Set Yield="30" />
			<Where CitySpecializationType="CITYSPECIALIZATION_MILITARY_TRAINING" YieldType="YIELD_GOLD" />
		</Update>
		<Update>
			<Set Yield="50" />
			<Where CitySpecializationType="CITYSPECIALIZATION_MILITARY_TRAINING" YieldType="YIELD_SCIENCE" />
		</Update>
		<Update>
			<Set Yield="30" />
			<Where CitySpecializationType="CITYSPECIALIZATION_MILITARY_NAVAL" YieldType="YIELD_GOLD" />
		</Update>
		<Update>
			<Set Yield="50" />
